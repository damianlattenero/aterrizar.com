<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.edu.unq.epers.aterrizar.model.Orden" table="orden" abstract="true">
        <id name="id" column="id" type="integer">
            <generator class="identity"/>
        </id>

        <joined-subclass name="ar.edu.unq.epers.aterrizar.model.OrdenVacio" table="ordenVacio">
            <key column="ordenVacio_id"></key>
        </joined-subclass>

        <joined-subclass name="ar.edu.unq.epers.aterrizar.model.MenorCosto" table="MenorCosto">
            <key column="MenorCosto_id"></key>
        </joined-subclass>

        <joined-subclass name="ar.edu.unq.epers.aterrizar.model.MenorDuracion" table="MenorDuracion">
            <key column="MenorDuracion_id"></key>
        </joined-subclass>

        <joined-subclass name="ar.edu.unq.epers.aterrizar.model.MenorCantidadDeEscalas" table="MenorCantidadDeEscalas">
            <key column="MenorCantidadDeEscalas_id"></key>
        </joined-subclass>

    </class>
</hibernate-mapping>
