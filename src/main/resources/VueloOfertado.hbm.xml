<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.edu.unq.epers.aterrizar.model.VueloOfertado" table="vueloOfertado">
        <id column="id" name="id" type="integer">
            <generator class="identity"/>
        </id>


        <bag fetch="select" lazy="false" name="tramos" table="tramos" cascade="all">
            <key>
                <column name="vuelo_id" not-null="false"/>
            </key>

            <many-to-many class="ar.edu.unq.epers.aterrizar.model.Tramo"/>
        </bag>

    </class>

</hibernate-mapping>
